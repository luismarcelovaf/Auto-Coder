# Code-Crafter Configuration Example
# Copy this file to ~/.code-crafter.yaml or ./.code-crafter.yaml

llm:
  # API endpoint URL (OpenAI-compatible)
  base_url: "http://localhost:11434/v1"  # Ollama default
  # base_url: "https://api.openai.com/v1"  # OpenAI
  # base_url: "https://api.together.xyz/v1"  # Together AI
  # base_url: "http://localhost:1234/v1"  # LM Studio

  # Model to use
  model: "llama3.2"
  # model: "gpt-4"
  # model: "mistralai/Mixtral-8x7B-Instruct-v0.1"

  # API key (optional for local models like Ollama)
  api_key: null

  # Custom authentication headers (for non-standard APIs)
  auth_headers: {}
    # X-Custom-Auth: "your-token"
    # X-API-Version: "2024-01"

  # Additional parameters to pass to the API
  extra_params: {}
    # temperature: 0.7
    # max_tokens: 4096

  # Request timeout in seconds
  timeout: 120.0

# Default working directory (defaults to current directory)
# working_dir: "/path/to/your/project"

# Custom system prompt (optional)
# system_prompt: |
#   You are a helpful coding assistant...

# =============================================================================
# AUTHENTICATION OPTIONS
# =============================================================================
#
# Option 1: API Key (simplest)
# - Set api_key above, or
# - Set CODE_CRAFTER_API_KEY environment variable, or
# - Set OPENAI_API_KEY environment variable
#
# Option 2: SSO Authentication
# - Set USE_SSO=true environment variable
# - Implement get_sso_token() in src/code_crafter/auth.py
# - Or set SSO_TOKEN environment variable for simple token-based SSO
#
# Option 3: Custom Headers
# - Use auth_headers above for custom authentication schemes
#
# =============================================================================
# CORRELATION ID
# =============================================================================
#
# All API requests include an x-correlation-id header to track related
# operations. The correlation ID:
# - Is generated automatically when the session starts
# - Remains the same for all requests in a conversation
# - Resets when you use /clear or /reset commands
# - Can be viewed with the /id command
#
# =============================================================================
# CERTIFICATE MANAGEMENT
# =============================================================================
#
# SSL certificates are verified using certifi. To customize:
# - Implement update_certifi() in src/code_crafter/auth.py
# - The function is called to update/refresh certificates as needed
